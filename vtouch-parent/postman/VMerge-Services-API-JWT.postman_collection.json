{
  "info": {
    "_postman_id": "jwt-collection-id",
    "name": "VMerge Services API - JWT Protected",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Auth - Me",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{jwtToken}}" }
        ],
        "url": { "raw": "{{baseUrl}}/auth/me", "host": [ "{{baseUrl}}" ], "path": [ "auth", "me" ] }
      }
    },
    {
      "name": "Auth - Logout",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Authorization", "value": "Bearer {{jwtToken}}" }
        ],
        "url": { "raw": "{{baseUrl}}/auth/logout", "host": [ "{{baseUrl}}" ], "path": [ "auth", "logout" ] }
      }
    },
    {
      "name": "Users - Get All Users",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{jwtToken}}" }
        ],
        "url": { "raw": "{{baseUrl}}/users", "host": [ "{{baseUrl}}" ], "path": [ "users" ] }
      }
    },
    {
      "name": "Users - Get User By ID",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{jwtToken}}" }
        ],
        "url": { "raw": "{{baseUrl}}/users/1", "host": [ "{{baseUrl}}" ], "path": [ "users", "1" ] }
      }
    },
    {
      "name": "Users - Create User",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Authorization", "value": "Bearer {{jwtToken}}" },
          { "key": "Content-Type", "value": "application/json" }
        ],
        "url": { "raw": "{{baseUrl}}/users", "host": [ "{{baseUrl}}" ], "path": [ "users" ] },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"username\": \"user2\",\n  \"email\": \"user2@example.com\",\n  \"password\": \"user123\",\n  \"firstName\": \"User\",\n  \"lastName\": \"Two\"\n}"
        }
      }
    },
    {
      "name": "Users - Update User",
      "request": {
        "method": "PUT",
        "header": [
          { "key": "Authorization", "value": "Bearer {{jwtToken}}" },
          { "key": "Content-Type", "value": "application/json" }
        ],
        "url": { "raw": "{{baseUrl}}/users/1", "host": [ "{{baseUrl}}" ], "path": [ "users", "1" ] },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"user2@example.com\",\n  \"firstName\": \"User\",\n  \"lastName\": \"Two\"\n}"
        }
      }
    },
    {
      "name": "Users - Delete User",
      "request": {
        "method": "DELETE",
        "header": [
          { "key": "Authorization", "value": "Bearer {{jwtToken}}" }
        ],
        "url": { "raw": "{{baseUrl}}/users/1", "host": [ "{{baseUrl}}" ], "path": [ "users", "1" ] }
      }
    }
  ],
  "variable": [
    { "key": "baseUrl", "value": "http://localhost:7070" },
    { "key": "jwtToken", "value": "<your_jwt_token>" }
  ]
} 